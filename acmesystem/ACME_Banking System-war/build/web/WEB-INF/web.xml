<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>Servlets.EmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>Servlets.CustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SystemServlet</servlet-name>
        <servlet-class>Servlets.SystemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAllServlet</servlet-name>
        <servlet-class>Servlets.DisplayAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayCustServlet</servlet-name>
        <servlet-class>Servlets.DisplayCustServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DispCustAccServlet</servlet-name>
        <servlet-class>Servlets.DispCustAccServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/EmployeeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/CustomerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SystemServlet</servlet-name>
        <url-pattern>/SystemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayAllServlet</servlet-name>
        <url-pattern>/DisplayAllServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayCustServlet</servlet-name>
        <url-pattern>/DisplayCustServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DispCustAccServlet</servlet-name>
        <url-pattern>/DispCustAccServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
